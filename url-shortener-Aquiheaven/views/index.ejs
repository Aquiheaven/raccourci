<%- include("./partials/header.ejs", {title: "Home page"}) %>

    <h1>URL Shortener</h1>
    <form action="/ajouterURL" method="POST">
        <label for="urlLong">Entrez l'URL longue:</label>
        <input type="text" id="urlLong" name="urlLong" required>
        <button type="submit">Raccourcir l'URL</button>
    </form>
    <p><%= message %></p>
    <h2>Shortened URLs</h2>
    <ul>
        <% allURL.forEach(function(url) { %>
            <li>
                <a href="/<%= url.urlCourt %>"><%= url.urlCourt %></a> - <%= url.urlLong %>
                <br>
                <img src="<%= url.codeQR %>" alt="QR Code">
                <button class="delete-button" data-id="<%= url.id %>">Supprimer</button>
            </li>
        <% }); %>
    </ul>
    <script src="/js/delete.js"></script>

<%- include("./partials/footer.ejs") %>
